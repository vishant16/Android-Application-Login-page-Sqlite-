<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.vishu.attendance.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="300dp"
        android:background="@android:color/holo_blue_bright">

        <ImageView
            app:srcCompat="@android:drawable/stat_notify_more"
            android:id="@+id/imageView"
            android:layout_marginTop="76dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_height="250dp"
        android:background="@android:color/holo_blue_bright">

        <TextView
            android:text="Faculty ID :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:id="@+id/textView"
            android:layout_marginRight="41dp"
            android:layout_marginEnd="41dp"
            android:layout_marginTop="34dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/login_button"
            android:layout_alignEnd="@+id/login_button"
            android:textColor="@android:color/background_light" />

        <TextView
            android:text="Passcode :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:id="@+id/textView2"
            android:layout_below="@+id/faculty_id"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:textColor="@android:color/background_light" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/passcode"
            android:hint="enter passcode"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/faculty_id"
            android:hint="enter your ID"
            android:layout_alignTop="@+id/textView"
            android:layout_alignLeft="@+id/passcode"
            android:layout_alignStart="@+id/passcode" />

        <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_button"
            android:layout_below="@+id/passcode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:onClick="register" />

        <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/sign_button"
            android:onClick="register" />
    </RelativeLayout>
</RelativeLayout>
